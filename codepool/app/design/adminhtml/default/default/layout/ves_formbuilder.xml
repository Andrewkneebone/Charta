<?xml version="1.0"?>
<layout version="0.1.0">
    
    <!-- Custom Form builder -->
    <adminhtml_formbuilder_index>
        <reference name="head">
            <action method="addItem"><type>skin_css</type><name>ves_formbuilder/style.css</name></action>
        </reference>
        <reference name="content">
            <block type="ves_formbuilder/adminhtml_formbuilder" name="formbuilder.form" template="ves_formbuilder/form_grid.phtml"/>  
        </reference>
    </adminhtml_formbuilder_index>
    <adminhtml_formbuilder_edit>
        <reference name="head">
            <action method="addItem"><type>skin_css</type><name>ves_formbuilder/bootstrap-tiny.css</name></action>
            <action method="addItem"><type>skin_css</type><name>ves_formbuilder/style.css</name></action>
            <action method="addItem"><type>js_css</type><name>ves_formbuilder/vendor/css/vendor.css</name></action>
            <action method="addItem"><type>js_css</type><name>ves_formbuilder/formbuilder.css</name></action>
        </reference>
    </adminhtml_formbuilder_edit>
    <adminhtml_formbuilder_new>
        <update handle="adminhtml_formbuilder_edit"/>
    </adminhtml_formbuilder_new>

